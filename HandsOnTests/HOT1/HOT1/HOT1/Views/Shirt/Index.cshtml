@model ShirtOrder
@{
	ViewData["Title"] = "Shirts";
}
<div class="text-start">
	<h1 class="display-4 text-center">Crazy Crank's T-Shirt Factory</h1>
	<h4>Order Form</h4>
	<form asp-action="Index" method="post">
		<div class="row">
			<div class="col-auto align-items-center">
				<label asp-for="Quantity" class="form-label">Quantity</label>
				<input asp-for="Quantity" class="form-control" />
				<span asp-validation-for="Quantity" class="text-danger"></span>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-auto align-items-center">
				<label asp-for="DiscountCode" class="form-label">Discount Code</label>
				<input asp-for="DiscountCode" class="form-control" />
				<p class="text-danger">@ViewBag.Discount</p>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-auto align-items-center">
				<button type="submit" class="btn btn-primary mt-2">Submit Order</button>
				<a asp-action="Index" class="btn btn-danger mt-2">Clear</a>
			</div>
		</div>
		<div class="row mt-3">
			<div class="align-items-center">
				<p><strong>@ViewBag.SubTotal</strong></p>
				<p><strong>@ViewBag.Tax</strong></p>
				<p><strong>@ViewBag.Total</strong></p>
			</div>
		</div>
	</form>
</div>