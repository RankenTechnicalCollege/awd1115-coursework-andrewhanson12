@model Product
@{
	ViewBag.Title = $"{ViewBag.Action}";
}
<h2>@ViewBag.Action</h2>
<form asp-action="Edit" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="mb-3">
		<label asp-for="ProductName" class="form-label">Name</label>
		<input asp-for="ProductName" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="ProductDescShort" class="form-label">Description Short</label>
		<input asp-for="ProductDescShort" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="ProductDescLong" class="form-label">Description Long</label>
		<textarea asp-for="ProductDescLong" class="form-control"></textarea>
	</div>
	<div class="mb-3">
		<label asp-for="ProductImage" class="form-label">Image</label>
		<input asp-for="ProductImage" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="ProductPrice" class="form-label">Price</label>
		<input asp-for="ProductPrice" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="ProductQuantity" class="form-label">Quantity</label>
		<input asp-for="ProductQuantity" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="CategoryId" class="form-label">Category</label>
		<select asp-for="CategoryId" class="form-control">
			<option value="">-- Select Category --</option>
			@foreach (var category in ViewBag.Categories)
			{
				<option value="@category.CategoryId">@category.CategoryName</option>
			}
		</select>
	</div>
	<input type="hidden" asp-for="ProductId" />
	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
