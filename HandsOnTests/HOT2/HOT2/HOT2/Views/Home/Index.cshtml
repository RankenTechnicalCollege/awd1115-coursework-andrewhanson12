@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Product Manager</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Short Description</th>
			<th>Long Description</th>
			<th>Image</th>
			<th>Price</th>
            <th>Quantity</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductDescShort</td>
                <td>@product.ProductDescLong</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ProductImage))
                    {
                        <img src="@product.ProductImage" alt="@product.ProductName" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
				</td>
                <td>@string.Format("{0:C}", product.ProductPrice)</td>
                <td>@product.ProductQuantity</td>
				<td>@product.Category?.CategoryName</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" asp-route-slug="@product.Slug" class="btn btn-warning">Edit</a>
					<a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
		}
    </tbody>
</table>
<a asp-controller="Product" asp-action="Add" class="btn btn-primary mt-2">Add New Product</a>
