@model List<HOT3.Models.Game>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Game List";
}

<h1>Game List</h1>
<div class="row">
	<div class="col-md-2">
		<ul class="list-group">
			<li class="list-group-item">
				<a asp-asp-controller="Game" asp-action="List" asp-route-genre="action" class="nav-link">Action</a>
			</li>
			<li class="list-group-item">
				<a asp-asp-controller="Game" asp-action="List" asp-route-genre="RPG" class="nav-link">RPG</a>
			</li>
			<li class="list-group-item">
				<a asp-asp-controller="Game" asp-action="List" asp-route-genre="Sports" class="nav-link">Sports</a>
			</li>
			<li class="list-group-item">
				<a asp-asp-controller="Game" asp-action="List" asp-route-genre="Survival" class="nav-link">Survival</a>
			</li>
		</ul>
	</div>
	<div class="col-md-10">
		<table class="table">
			<thead>
				<tr>
					<th>Title</th>
					<th>Genre</th>
					<th>Price</th>
					<th>Year</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var game in Model)
				{
					<tr>
						<td>@game.Name</td>
						<td>@game.Genre</td>
						<td>@string.Format("{0:C}", game.Price)</td>
						<td>
							<a asp-asp-controller="Game" asp-action="Details" asp-route-id="@game.Id" asp-route-slug="@game.Slug" class="btn btn-info">Details</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>