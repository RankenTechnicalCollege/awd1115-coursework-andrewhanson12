@model IEnumerable<HOT4.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}

<h2>Customers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Username</td>
                <td>@c.Phone</td>
                <td><a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-primary">Add Customer</a>
</div>


