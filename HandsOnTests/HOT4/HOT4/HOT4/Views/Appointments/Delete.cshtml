@model HOT4.Models.Appointment
@{
    ViewData["Title"] = "Delete Appointment";
}

<h2>Delete Appointment</h2>
<h4>Are you sure you want to delete this appointment?</h4>
<div>
    <h5>Appointment Details</h5>
    <dl class="row">
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToString("g")
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.Customer?.Username
        </dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
