@{
    ViewData["Title"] = "Starlight Events";
    <meta name="keywords" content="Events, Wedding, Party, Music, Birthday, Nature, Pickleball" />
	<meta name="description" content="Starlight Events is your premier destination for unforgettable events in a beautiful outdoor setting. Whether you're planning a wedding, birthday party, corporate event, or a fun day of pickleball, we have the perfect venue and services to make your occasion special." />
}

<body class="bg-info-subtle" style="font-family: Arial, sans-serif;">
    <div class="text-center">
        <h1 class="display-2">Starlight Events</h1>
        <h3 class="display-6">Welcome!</h3>
	</div>
    <div id="carouselExampleDark" class="carousel carousel-dark slide">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="10000">
                <img src="~/Images/Picnic.jpg" class="d-block w-100 opacity-50" alt="Park" width="600" height="600">
                <div class="carousel-caption d-none d-md-block">
                    <h5><strong>Starlight Events</strong></h5>
                    <p><strong>Purchase tickets to one of our upcoming events now!</strong></p>
					<a href="#" class="btn btn-primary">Get Tickets</a>
                </div>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="~/Images/Pickleball.jpg" class="d-block w-100 opacity-50" alt="Pickleball courts" width="600" height="600">
                <div class="carousel-caption d-none d-md-block">
                    <h5><strong>Starlight Events</strong></h5>
                    <p><strong>View our upcoming schedule!</strong></p>
                    <a asp-controller="Events" asp-action="Index" class="btn btn-primary">Schedule</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/Trail.jpg" class="d-block w-100 opacity-50" alt="Trail" width="600" height="600">
                <div class="carousel-caption d-none d-md-block">
                    <h5><strong>Starlight Events</strong></h5>
                    <p><strong>Host your event at our location!</strong></p>
                    <a href="#" class="btn btn-primary">Contact</a>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</body>
