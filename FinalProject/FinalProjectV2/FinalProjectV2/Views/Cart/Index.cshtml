@model FinalProjectV2.Models.Cart.CartVM

@{
    ViewData["Title"] = "Cart";
}

<h2>Cart</h2>

@if (TempData["message"] != null)
{
    <div class="alert alert-info">@TempData["message"]</div>
}

@if (Model.Items == null || !Model.Items.Any())
{
    <p>Your cart is empty.</p>
    <a asp-controller="Event" asp-action="Index" class="btn btn-primary">Browse Events</a>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ticket</th>
                <th class="text-end">Price</th>
                <th style="width:140px;">Qty</th>
                <th class="text-end">Line Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.TicketName</td>
                    <td class="text-end">@item.Price.ToString("c")</td>
                    <td>
                        <form asp-action="Update" method="post" class="d-flex gap-2">
                            <input type="hidden" name="ticketTypeId" value="@item.TicketTypeId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="0" class="form-control form-control-sm" />
                        </form>
                    </td>
                    <td class="text-end">@item.LineTotal.ToString("c")</td>
                    <td class="text-end">
                        <form asp-action="Remove" method="post">
                            <input type="hidden" name="ticketTypeId" value="@item.TicketTypeId" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Total:</th>
                <th class="text-end">@Model.Total.ToString("c")</th>
                <th></th>
            </tr>
        </tfoot>
    </table>

    <div class="d-flex gap-2">
        <form asp-action="Clear" method="post">
            <button type="submit" class="btn btn-outline-danger">Clear Cart</button>
        </form>

        <a asp-controller="Checkout" asp-action="Index" class="btn btn-success">Checkout</a>
    </div>
}

