@model IEnumerable<Class>
@{
    ViewData["Title"] = "Class Schedule";
}

<div class="text-center">
    <h1>Class Schedule</h1>
    @foreach (Day day in ViewBag.Days)
    {
        <a asp-action="Index" asp-route-id="@day.DayId">@day.Name</a>
    }
</div>

<a asp-action="Add" asp-controller="Class">Add Class</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Number</th>
            <th>Teacher</th>
			<th>Day</th>
            <th>Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Class c in Model)
        {
            <tr>
                <td>@c.Title</td>
                <td>@c.Number</td>
				<td>@c.Teacher.FullName</td>
                <td>@c.Day.Name</td>
				<td>@c.MilitaryTime</td>
                <td>
                    <a asp-action="Edit" asp-controller="Class" asp-route-id="@c.ClassId" class="btn btn-outline-dark">Edit</a> |
                    <a asp-action="Delete" asp-controller="Class" asp-route-id="@c.ClassId" class="btn btn-outline-danger">Delete</a>
				</td>
            </tr>
        }
    </tbody>
</table>