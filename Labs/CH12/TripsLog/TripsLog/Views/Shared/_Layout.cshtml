<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TripsLog</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TripsLog.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">My Trip Log</a>
                <div class="navbar-nav">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">View Trips</a>
                    <a class="nav-link" asp-controller="Home" asp-action="ManageDestinations">Manage Destinations</a>
                    <a class="nav-link" asp-controller="Home" asp-action="ManageAccommodations">Manage Accommodations</a>
                    <a class="nav-link" asp-controller="Home" asp-action="ManageActivities">Manage Activities</a>
                </div>
            </div>
		</nav>
        <h1 class="bg-dark text-white p-3 text-center">My Trip Log</h1>

        @if (!string.IsNullOrEmpty(ViewBag.SubHeader))
        {
            <h3 class="bg-secondary text-white p-2">@ViewBag.SubHeader</h3>
		}
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TripsLog - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
